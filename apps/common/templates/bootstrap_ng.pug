extends ./bootstrap_boilerplate.pug

block prepend css
  base(
    href=locals.appConfig.mount
  )
block append css
  link(rel='stylesheet' href='/static/common/codemirror/lib/codemirror.css')
block content

  div.container

    ul.nav
      li.nav-item
        b
          a.nav-link= locals.site.title
      each val in locals.site.siteMenu
        li.nav-item
          a.nav-link(href=val.link)= val.title

    app-root
block append js

  div#carolinaMetadata(
    appName=locals.app.name
    data=JSON.stringify(locals.app.data)
    salt=site.secrets.clientSideSalt
  )
  
  script(src='/static/common/js-sha512/sha512.min.js')
  // script(src='/static/common/codemirror/lib/codemirror.js')
  // script(src='/static/common/codemirror/mode/markdown/markdown.js')
  script(src="/static/" + locals.app.name + "/inline.bundle.js")
  script(src="/static/" + locals.app.name + "/polyfills.bundle.js")
  script(src="/static/" + locals.app.name + "/styles.bundle.js")
  script(src="/static/" + locals.app.name + "/vendor.bundle.js")
  script(src="/static/" + locals.app.name + "/main.bundle.js")

